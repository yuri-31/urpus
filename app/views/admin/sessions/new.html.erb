<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="col-11 col-sm-7 col-md-6 col-lg-4 mx-auto  mt-5">
  <h2>ADMIN LOG IN</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-12 field-style' %>
    </div>
  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'col-12 field-style' %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Log in", class: 'col-8 btn btn-blue mt-5'%>
    </div>
  <% end %>
  
  <%= render "admin/shared/links" %>
</div>

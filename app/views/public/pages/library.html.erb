<div class="container mt-5">
    <div class="row col-8 mx-auto">
        <div class="col-3 text-center">
            <div class="header-profile-img-container mx-auto">
                <%= image_tag @user.get_profile_image(700, 700) %>
            </div>
            <h5 class="mt-2 mb-0"><strong><%= link_to @user.nickname, user_path(@user.id), class: 'link-style text-light' %></strong></h5>
            <p>@<%= @user.login_id %></p>
        </div>
        <div class="col-9">
            <h4>PAGES of <%= @book.name %> :</h4>
            <div class="mt-4">
                <% @pages.each do |page| %>
                    <%= link_to page.name, page_path(page.id), class: 'col-8 mb-2 btn btn-blue mr-2' %>
                <% end %>
            </div>
        </div>
    </div>
</div>
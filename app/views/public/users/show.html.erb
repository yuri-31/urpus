<div class="col-11 mt-3 ml-5">
<% if flash[:success] %>
    <div class="error-container">
        <strong class="text-green">
            <i class="fa-sharp fa-solid fa-circle-check"></i>
            <%= flash[:success] %>
        </strong>
    </div>
<% end %>
</div>
<div class="col-4 mx-auto mt-5 border border-outline-light px-4 pt-3 pb-3 rounded">
    <div class="row">
        <h2 class="mb-4">MY PAGE :</h2>
        <%= link_to edit_user_path, method: :get, class: 'col-2 ml-auto mt-2' do %>
            <i class="fa-sharp fa-solid fa-gear text-secondary"></i>
        <% end %>
    </div>
    <div>
        <table class="col-10 mx-auto">
            <div class="mb-4">
                <div class="profile-img-container mx-auto">
                    <%= image_tag @user.get_profile_image(700, 700), class: 'rounded-circle' %>
                </div>
            </div>
            <tbody>
                <tr>
                    <th>NICKNAME:</th>
                    <td class="text-right">
                        <% if current_user.email == 'guest@example.com'%>
                            <%= 'GUEST' %>
                        <% elsif @user.nickname.blank? %>
                            <%= @user.login_id %>
                        <% else %>
                            <%= @user.nickname %>
                        <% end %>
                    </td>
                </tr>
                <tr>
                    <th>lOGIN ID:</th>
                    <td class="text-right">@<%= @user.login_id %></td>
                </tr>
                <tr>
                    <th>NOTE:</th>
                    <td class="text-right"><%= @user.note %></td>
                </tr>
            </tbody>
        </table>
    </div>
    <%= link_to "LOG OUT", destroy_user_session_path, method: :get, class: 'col-12 mt-4 btn btn-blue' %>
</div>


<%= render 'public/shared/flash_show' %>

<%= form_with model: @user, url: update_user_path, method: :patch do |f| %>
<div class="col-11 col-sm-9 mx-auto px-0">
    <div class="col-12 d-sm-flex mt-5">
        <%= link_to "<< CANCEL", my_page_path, class: 'btn btn-light mr-5', style: 'height: 38px;' %>
        <h2 class="mb-4 mt-3 mt-sm-0">USER INFO :</h2>
    </div>
    <div class="col-md-8 col-lg-6 mx-auto">
        <div>
            <div class="profile-img-container mx-auto">
                <%= image_tag @user.get_profile_image(700, 700), class: 'rounded-circle' %>
            </div>
        </div>
        <div class="col-lg-6 mx-auto text-center">
            <label>
                <%= f.file_field :profile_image, class: 'profile-file-field' %>Change profile photo
            </label>
        </div>
        <table class="col-12 mt-3">
            <tbody>
                <tr>
                    <th><%= f.label :nickname, "NICKNAME:"%></th>
                    <td><%= f.text_field :nickname, class: 'col-12 field-style' %></td>
                </tr>
                <tr>
                    <th><%= f.label :login_id, "LOGIN ID:" %></th>
                    <td><%= f.text_field :login_id, class: 'col-12 field-style' %></td>
                </tr>
                <tr>
                    <th><%= f.label :note, "NOTE:" %></th>
                    <td><%= f.text_field :note, class: 'col-12 field-style' %></td>
                </tr>
                <tr>
                    <th><%= f.label :email, "EMAIL:" %></th>
                    <td><%= f.text_field :email, class: 'col-12 field-style' %></td>
                </tr>
            </tbody>
        </table>
        <%= f.submit "UPDATE", class: 'col-12 btn btn-blue mt-4' %><br>
        <%= link_to "DELETE ACCOUNT", unsubscribe_path, class: 'col-12 btn btn-light mt-2' %>
    </div>
</div>
<% end %>
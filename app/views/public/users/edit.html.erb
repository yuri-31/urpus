<%= form_with model: @user, url: update_user_path, method: :patch do |f| %>
<div>
    <h2>USER INFO</h2>
    <table>
        <tbody>
            <tr>
                <th><%= f.label :nickname, "NICKNAME:"%></th>
                <td><%= f.text_field :nickname %></td>
            </tr>
            <tr>
                <th><%= f.label :login_id, "LOGIN ID:" %></th>
                <td><%= f.text_field :login_id %></td>
            </tr>
            <tr>
                <th><%= f.label :note, "NOTE:" %></th>
                <td><%= f.text_field :note %></td>
            </tr>
            <tr>
                <th><%= f.label :email, "EMAIL:" %></th>
                <td><%= f.text_field :email %></td>
            </tr>
        </tbody>
    </table>
    <%= f.submit "UPDATE" %><br>
    <%= link_to "DELETE ACCOUNT", unsubscribe_path %>
</div>
<% end %>
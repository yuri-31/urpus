<%= render 'public/shared/flash_show' %>

<%= form_with model: @new_book, url: books_path, method: :post do |f| %>
<div class="container mt-5">
    <div class="col-11 mx-auto d-flex justify-content-between mb-4">
        <h3 class="m-0">CREATE NEW BOOK:</h3>
        <%= f.text_field :name, class: 'col-5 mr-1 field-style' %>
        <%= f.submit 'CREATE', class: 'col-2 btn btn-light mr-1' %>
        <%= link_to edit_books_path, method: :get do %>
            <i class="fa-sharp fa-solid fa-gears btn text-light"></i>
        <% end %>
    </div>
    <div class="row col-10 mx-auto">
        <div class="col-5">
            <h3>BOOKS:</h3>
            <div class="mt-4">
                <% @books.each do |book| %>
                    <%= link_to book.name.truncate(28), new_book_path(id: book.id), class: 'col-12 mb-2 btn btn-navy' %><br>
                <% end %>
            </div>
        </div>
        <div class="col-6 offset-md-1">
            <h3>
                PAGES of:
                <% if params[:id] %>
                    <%= @book.name.truncate(38) %>
                <% end %>
            </h3>
            <% if params[:id] %>
            <div class="mt-4">
                <% @pages.each do |page| %>
                    <%= link_to page.name, page_path(page.id), class: 'col-12 mb-2 btn btn-blue' %><br>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
    <div class="col-3 mx-auto mt-3">
        <% if params[:id] %>
        <%= link_to "GO CHECK THIS BOOK!", book_path(@book.id), class: 'col-12 btn btn-light' %>
        <% end %>
    </div>
</div>
<% end %>
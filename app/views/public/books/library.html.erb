
    <div class="d-sm-flex col-sm-10 col-md-8 col-lg-6 mx-auto text-center pt-4 pt-sm-5 px-0">
        <div class="col-sm-4 col-lg-3 mx-auto text-center">
            <div class="header-profile-img-container mx-auto">
                <%= image_tag @user.get_profile_image(700, 700) %>
            </div>
            <h5 class="mt-2 mb-0"><strong><%= link_to @user.nickname, user_path(@user.id), class: 'link-style text-light' %></strong></h5>
            <p>@<%= @user.login_id %></p>
        </div>
        <div class="col-sm-8 col-lg-9">
            <h4 class="text-left pl-3">BOOKS :</h4>
            <div class="mt-sm-4">
                <% @books.each do |book| %>
                    <%= link_to book.name, page_library_path(book.id), class: 'col-12 mb-2 btn btn-navy mr-2' %>
                <% end %>
            </div>
        </div>
    </div>
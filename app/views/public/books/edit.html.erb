
<%= render 'public/shared/flash_show' %>

<div class="col-8 mx-auto mt-5">
    <div class="col-12 d-flex mt-5 mb-4">
        <%= link_to '<< BACK', new_book_path, class: 'btn btn-light ml-3 mr-4', style: 'height: 38px;' %>
        <h2>Edit BOOKS :</h2>
    </div>
    <div class="col-10 mx-auto">
        <% @books.each do |book| %>
            <%= form_with model: book, url: book_path(book.id), method: :patch do |f| %>
                <h5 class="d-flex justify-content-between mb-3">
                    <%= f.text_field :name, class: 'col-5 book-field field-style' %>
                    <%= f.submit 'UPDATE !', class: 'col-2 btn btn-navy' %>
                    <% if book.is_private == true %>
                        <%= link_to 'PRIVATE', update_book_status_path(book.id), method: :patch, class: 'col-2 btn btn-pink' %>
                    <% elsif book.is_private == false %>
                        <%= link_to 'PUBLIC', update_book_status_path(book.id), method: :patch, class: 'col-2 btn btn-green' %>
                    <% end %>
                    <%= link_to 'DELETE', book_path(book.id), method: :delete, data: {confirm: 'Are you sure you want to delete the BOOK?' }, class: 'col-2 btn btn-secondary ml-4' %>
                </h5>
            <% end %>
        <% end %>
    </div>
</div>
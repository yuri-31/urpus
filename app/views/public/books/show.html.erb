
<%= render 'public/shared/flash_show' %>

<%= form_with model: @new_page, url: pages_path, method: :post do |f| %>
<div class="container mt-5">
    <div class="d-flex mb-2">
        <%= link_to '<< BACK', new_book_path(@book.id), class: 'btn btn-light mr-3', style: 'height: 38px;' %>
        <h3 class="mr-5">PAGES of: <strong class="book-title ml-2"><%= @book.name.truncate(45) %></strong></h3>
    </div>
    <div class="col-8 mx-auto d-flex justify-content-between mb-4">
        <% if @book.user == current_user %>
            <%= f.text_field :name, class: 'col-7 mr-1 field-style' %>
            <%= f.submit 'ADD NEW PAGE', class: 'btn btn-light mr-1' %>
            <%= link_to edit_pages_path(id: @book.id), method: :get do %>
                <i class="fa-sharp fa-solid fa-gears btn text-light"></i>
            <% end %>
        <% end %>
    </div>
    <div class="col-10 mx-auto">
        <ul class="d-flex flex-wrap justify-content-between">
            <% @pages.each do |page| %>
                <li class="col-6">
                    <%= link_to page.name.truncate(28), page_path(page.id), class: 'col-12 mb-2 btn btn-blue page-btn' %>
                </li>
            <% end %>
        </ul>
    </div>
</div>
<%= f.hidden_field :book_id, :value => @book.id %>
<% end %>
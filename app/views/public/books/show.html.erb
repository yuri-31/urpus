<%= form_with model: @new_page, url: pages_path, method: :post do |f| %>
<div>
    <h2>PAGES of: <%= @book.name %></h2>
    <%= f.text_field :name %>
    <%= f.submit 'ADD NEW PAGE' %>
    <div>
        <% @pages.each do |page| %>
            <%= link_to page.name, page_path(page.id) %><br>
        <% end %>
    </div>
</div>
<%= f.hidden_field :book_id, :value => @book.id %>
<% end %>
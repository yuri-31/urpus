<div class="col-11 mx-auto mt-3">
  <%= render "public/shared/error_messages", resource: resource %>
</div>

<div class="col-11 col-sm-8 col-md-6 col-lg-5 mx-auto mt-5 px-0">
  <h2>SIGN UP</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div>
    <div class="d-flex mb-2">
      <%= f.label :nickname, "NICKNAME", class: 'col-6 mb-0 px-0' %>
      <%= f.text_field :nickname, autofocus: true, class:'col-6 field-style' %>
    </div>
    <div class="d-flex mb-2">
      <%= f.label :login_id, "LOGIN ID", class: 'col-6 mb-0 px-0' %>
      <%= f.text_field :login_id, class:'col-6 field-style' %>
    </div>
    <div class="d-flex mb-2">
      <%= f.label :note, "NOTE", class: 'col-6 mb-0 px-0' %>
      <%= f.text_field :note, class:'col-6 field-style' %>
    </div>
    <div class="d-flex mb-2">
      <%= f.label :email, "EMAIL", class: 'col-6 mb-0 px-0' %>
      <%= f.email_field :email, autocomplete: "email", class:'col-6 field-style' %>
    </div>
    <div class="d-flex mb-2 pt-3 mt-sm-0">
      <div class="col-6 px-0">
        <%= f.label :password, "PASSWORD", class: 'mb-0' %>
        <% if @minimum_password_length %>
        <p class="mb-0">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>
      <div class="col-6 px-0">
        <%= f.password_field :password, autocomplete: "new-password", class: 'col-12 field-style' %>
      </div>
    </div>
    <div class="d-flex mb-4">
      <%= f.label :password_confirmation, "PASSWORD CONFIRMATION", class: 'col-6 mb-0 px-0' %>
      <div class="col-6 px-0">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-12 field-style' %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit "SIGN UP", class: 'col-10 col-md-8 btn btn-navy' %></td>
  </div>
  <% end %>
  <div class="text-center mt-4">
    <%= render "public/shared/links" %>
  </div>

</div>